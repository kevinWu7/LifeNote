    width: 12px;
    min-width: 12px;
    max-width: 12px;
    height: 12px;
    min-height: 12px;
    max-height: 12px;
    border-radius: 5px;
    color: white;
}

QToolButton#arrowLeftBtn:hover{
    background-color:  rgb(72, 72, 72);
}

QToolButton#arrowRightBtn{
    width: 12px;
    min-width: 12px;
    max-width: 12px;
    height: 12px;
    min-height: 12px;
    max-height: 12px;
    border-radius: 5px;
    color: white;
}

QToolButton#arrowRightBtn:hover{
    background-color:  rgb(72, 72, 72);
}


